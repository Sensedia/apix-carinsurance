                    },
                    {
                        "name": "id",
                        "in": "path",
                        "description": "Identificador da cotação",
                        "required": true,
                        "type": "integer",
                        "format": "int32"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Sucesso"
                    },
                    "400": {
                        "description": "Id inválido"
                    },
                    "401": {
                        "description": "Não autorizado"
                    }
                }
            }
        },
