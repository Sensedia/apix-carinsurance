                    },
                    {
                        "name": "segurado",
                        "in": "body",
                        "description": "Dados do candidato a segurado, incluindo `Carro` e `Perfil`",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/Segurado"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Sucesso",
                        "schema": {
                            "title": "cotacao",
                            "$ref": "#/definitions/Cotacao"
                        }
                    },
                    "400": {
