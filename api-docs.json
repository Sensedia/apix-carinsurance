{
    "swagger": "2.0",
    "info": {
        "description": "Exemplo de especificação para as APIs do sistema CarIn usado no workshop do API Experience da Sensedia. (http://www.apiexperience.com.br/)",
        "version": "0.0.1",
        "title": "CarIn - Car Insurance",
        "contact": {
            "name": "suporte@sensedia.com"
        }
    },
    "host": "portal.apix.sensedia.com",
    "basePath": "/proxy/sandbox/carin/v1/",
    "paths": {
        "/cotacoes": {
            "get": {
                "tags": [
                    "Cotacoes"
                ],
                "description": "Obtém a lista de todas as `Cotacoes` já realizadas.\nFiltros de escopo podem ser usados para range de valor e quantidade de cotações retornadas.\nAlém disso, é possível definir a paginação dos resultados com os parâmetros _offset e _limit.\nSe você quiser apenas alguns dos atributos de produtos, use o parâmetro _fields.\n",
                "parameters": [
                    {
                        "name": "app-token",
                        "in": "header",
                        "description": "Identificador da app",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "_limit",
                        "in": "query",
                        "description": "Quantidade de cotações retornadas",
                        "required": true,
                        "type": "integer",
                        "format": "int32"
                    },
                    {
                        "name": "_offset",
                        "in": "query",
                        "description": "Por onde começar",
                        "required": true,
                        "type": "integer",
                        "format": "int32"
                    },
                    {
                        "name": "valorMinimo",
                        "in": "query",
                        "description": "Valor mínimo da cotação",
                        "required": false,
                        "type": "number",
                        "format": "double"
                    },
                    {
                        "name": "valorMaximo",
                        "in": "query",
                        "description": "Valor máximo da cotação",
                        "required": false,
                        "type": "number",
                        "format": "double"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Sucesso",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/Cotacao"
                            }
                        }
                    },
                    "401": {
                        "description": "Não autorizado"
                    }
                }
            },
            "post": {
                "tags": [
                    "Cotacoes"
                ],
                "description": "Cria uma nova cotação",
                "parameters": [
                    {
                        "name": "app-token",
                        "in": "header",
                        "description": "Identificador da app",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "segurado",
                        "in": "body",
                        "description": "Dados do candidato a segurado, incluindo `Carro` e `Perfil`",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/Segurado"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Criado com sucesso"
                    },
                    "401": {
                        "description": "Não autorizado"
                    }
                }
            }
        },
        "/cotacoes/{id}": {
            "get": {
