                    }
                }
            }
        }
    },
    "definitions": {
        "Cotacao": {
            "required": [
                "id"
            ],
            "properties": {
                "id": {
                    "type": "integer",
                    "format": "int64"
                },
                "nome": {
                    "type": "string"
                },
                "valorApolice": {
                    "type": "number",
                    "format": "double"
                },
                "valorFranquia": {
                    "type": "number",
                    "format": "double"
                }
            }
        },
        "Segurado": {
            "properties": {
                "id": {
                    "type": "integer",
                    "format": "int64"
                },
                "nome": {
                    "type": "string"
                },
                "carro": {
                    "$ref": "#/definitions/Carro"
                },
                "perfil": {
                    "$ref": "#/definitions/Perfil"
                }
            }
        },
        "Carro": {
            "required": [
                "id",
                "modelo"
            ],
            "properties": {
                "id": {
                    "type": "integer",
                    "format": "int64"
                },
                "modelo": {
                    "type": "string"
                },
                "versao": {
                    "type": "string"
                },
                "ano": {
                    "type": "integer",
                    "format": "int32"
                },
                "marca": {
                    "type": "string"
                }
            }
        },
        "Perfil": {
            "required": [
                "id"
            ],
            "properties": {
                "id": {
                    "type": "integer",
                    "format": "int64"
                },
                "lugarUso": {
                    "type": "string"
                },
                "estadoCivil": {
                    "type": "string"
                },
                "estacionamento": {
                    "example": "privativo | fechado | aberto",
                    "type": "string"
                },
                "sexo": {
                    "type": "string"
                },
                "idade": {
                    "type": "integer",
                    "format": "int32"
                }
            }
        },
        "Sinistro": {
            "properties": {
                "id": {
                    "type": "integer",
                    "format": "int64"
                },
                "tipo": {
                    "type": "string",
                    "example": "furto, roubo, colisão..."
                },
                "localizacao": {
                    "type": "string",
                    "example": "35.850862 -78.886049"
                }
            }
        }
    }
